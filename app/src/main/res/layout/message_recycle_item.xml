<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/colorWhite">

    <TextView
        android:id="@+id/tv_message_item_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:background="@drawable/ic_bg_message_item_avatar"
        android:elevation="4dp"
        android:gravity="center"
        android:text="J"
        android:textColor="@color/colorWhite"
        android:textSize="24sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_message_item_avatar">

        <TextView
            android:id="@+id/tv_message_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:padding="5dp"
            android:text="江流儿"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_message_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_item_nickname"
            android:fontFamily="@font/roboto_light"
            android:paddingLeft="5dp"
            android:text="Nice to meet you"
            android:textColor="@color/colorGrayDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_message_item_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_message_item_nickname"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/roboto_light"
            android:text="前天 17:43"
            android:textColor="@color/colorGray"
            android:textSize="12sp" />


    </RelativeLayout>

</RelativeLayout>