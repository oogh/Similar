<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@drawable/ic_ripple_recycle_item"
    android:clickable="true"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_murmur_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textSize="20sp"
        tools:text="2018年03月19日" />

    <TextView
        android:id="@+id/tv_murmur_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_murmur_date"
        android:ellipsize="end"
        android:fontFamily="@font/roboto_light"
        android:maxLines="1"
        android:textSize="16sp"
        tools:text="我生的酒噶时；价格都是军服；阿三感激地说噶上帝给；节点撒公司大公司大工具；第三方" />

</RelativeLayout>